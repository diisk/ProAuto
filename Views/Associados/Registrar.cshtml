@model ProAuto.DTOs.CreateAssociadoDTO

@{
    ViewData["Title"] = "Registrar";
}

<div class="proauto-main">
    <section class="main-card">
        <header>
            <div class="main-card-icon">
                <i class="fa-solid fa-book"></i>
            </div>
            <div>
                <span>
                    Registrar Associado
                </span>
            </div>
        </header>
        <div class="main-card-content">
            <form asp-action="registrar" method="post">
                <div class="d-flex">
                    <div class="proauto-form wid-100">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="proauto-form wid-33">
                        <label asp-for="CPF" class="control-label"></label>
                        <input asp-for="CPF" class="form-control mascara-cpf" maxlength="14" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                    <div class="proauto-form wid-33">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="form-control mascara-telefone" maxlength="14" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="proauto-form wid-33">
                        <label asp-for="PlacaVeiculo" class="control-label"></label>
                        <input asp-for="PlacaVeiculo" class="form-control" />
                        <span asp-validation-for="PlacaVeiculo" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="proauto-form wid-50">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="proauto-form wid-50">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input asp-for="Cidade" class="form-control" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="proauto-form wid-50">
                        <label asp-for="Bairro" class="control-label"></label>
                        <input asp-for="Bairro" class="form-control" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                    <div class="proauto-form wid-50">
                        <label asp-for="Complemento" class="control-label"></label>
                        <input asp-for="Complemento" class="form-control" />
                        <span asp-validation-for="Complemento" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex">
                    <div class="proauto-form w-100">
                        <label asp-for="Rua" class="control-label"></label>
                        <input asp-for="Rua" class="form-control" />
                        <span asp-validation-for="Rua" class="text-danger"></span>
                    </div>
                    <div class="proauto-form w-20">
                        <label asp-for="Numero" class="control-label"></label>
                        <input asp-for="Numero" class="form-control" />
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>
                </div>
                <div class="min-h">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <button type="submit" class="proauto-btn">Finalizar</button>
            </form>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
